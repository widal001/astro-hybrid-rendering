---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Card2 from "@/components/Card2.astro";
---

<Layout title="Welcome to Astro.">
  <main>
    <div class="container max-w-4xl">
      <div class="container my-8">
        <h1
          class="font-extrabold text-primary tracking-tight leading-none text-center text-5xl xl:text-6xl"
        >
          Welcome to Astro
        </h1>
      </div>
      <div class="container">
        <p class="instructions">
          To get started, open the directory <code>src/pages</code> in your
          project.<br />
          <strong>Code Challenge:</strong> Tweak the "Welcome to Astro" message
          above.
        </p>
      </div>
      <div class="container my-3">
        <ul role="list" class="grid md:grid-cols-2 gap-4">
          <Card2
            href="https://docs.astro.build/"
            title="Documentation"
            body="Learn how Astro works and explore the official API docs."
          />
          <Card2
            href="https://astro.build/integrations/"
            title="Integrations"
            body="Supercharge your project with new frameworks and libraries."
          />
          <Card2
            href="https://astro.build/themes/"
            title="Themes"
            body="Explore a galaxy of community-built starter themes."
          />
          <Card2
            href="https://astro.build/chat/"
            title="Community"
            body="Come say hi to our amazing Discord community. ❤️"
          />
        </ul>
      </div>
    </div>
  </main>
</Layout>
