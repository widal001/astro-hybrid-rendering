---
import Layout from "../layouts/Layout.astro";
import CardList from "@/components/CardList";
import type { CardProps } from "@/types";

const cards = [
  {
    href: "https://docs.astro.build/",
    title: "Documentation",
    body: "Learn how Astro works and explore the official API docs.",
    badges: ["docs", "api", "resources"],
  },
  {
    href: "https://astro.build/integrations/",
    title: "Integrations",
    body: "Supercharge your project with new frameworks and libraries.",
    badges: ["integrations", "api", "add-ons"],
  },
  {
    href: "https://astro.build/themes/",
    title: "Themes",
    body: "Explore a galaxy of community-built starter themes.",
    badges: ["themes", "ui", "community"],
  },
  {
    href: "https://astro.build/chat/",
    title: "Community",
    body: "Come say hi to our amazing Discord community. ❤️",
    badges: ["community", "help", "open-source"],
  },
] as Array<CardProps>;

const topicArr = cards.map((cards) => cards.badges);
const topics = [...new Set(topicArr.flat())];
---

<Layout title="Welcome to Astro.">
  <main>
    <div class="container max-w-4xl">
      <section class="container my-8">
        <h1
          class="font-extrabold text-primary tracking-tight leading-none text-center text-5xl xl:text-6xl"
        >
          Welcome to Astro
        </h1>
      </section>
      <section class="container mt-6 mb-8">
        <CardList tags={topics} items={cards} client:idle />
      </section>
    </div>
  </main>
</Layout>
