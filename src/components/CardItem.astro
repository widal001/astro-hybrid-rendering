---
import {
  Card,
  CardContent,
  CardHeader,
  CardTitle,
  CardFooter,
} from "@/components/ui/card";
import BadgeList from "./BadgeList.astro";

const { href, title, body, badges } = Astro.props;
---

<li>
  <a href={href}>
    <Card>
      <CardHeader className="pt-4 pb-2 tracking-normal">
        <CardTitle className="text-xl">{title}</CardTitle>
      </CardHeader>
      <CardContent className="pb-4">
        <p class="text-lg text-primary/70">{body}</p>
      </CardContent>
      <CardFooter>
        <BadgeList badges={badges} />
      </CardFooter>
    </Card>
  </a>
</li>
